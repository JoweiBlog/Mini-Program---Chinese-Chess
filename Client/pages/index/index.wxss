/**index.wxss**/
.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f5f5f5;
  box-sizing: border-box;
  overflow: hidden;
} 

.index-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.create-room-btn {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.play-btn {
  width: 250rpx;
}

.rule-link {
  position: absolute;
  bottom: 100rpx;
  right: 0;
  left: 0;
  width: 160rpx;
  margin: 0 auto;
  padding: 12rpx;
  text-align: center;
  color: #CD1F2D;
  background: #F5F4F5;
  border: 1px solid #CD1F2D;
  border-radius: 8rpx;
  font-size: 26rpx;
  z-index: 2;
}

.copyright {
  position: absolute;
  bottom: 50rpx;
  right: 0;
  left: 0;
  text-align: center;
  margin: 0 auto;
  font-size: 22rpx;
  color: #000;
  z-index: 2;
}